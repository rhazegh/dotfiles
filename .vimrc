execute pathogen#infect()
syntax enable
set number
filetype plugin indent on
let g:solarized_termcolors=256
colorscheme solarized
set background=dark

" Search settings
set incsearch
set hlsearch

" ====================================
" Python IDE setup
" =====================================

" Settings for vim-powerline
set laststatus=2

" Settings for ctrlp
let g:ctrl_max_height=30
